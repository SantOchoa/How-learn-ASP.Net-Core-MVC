@{
    ViewData["Title"] = "User Game";
}
<!DOCTYPE
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>


    <form asp-controller="User" asp-action="saveUser" method="post">
        <input type="text" name="nameUser" placeholder="Nombre de usuario" />
        <input type="number" name="idUser" placeholder="ID de usuario" />
        <input type="password" name="passwordUser" placeholder="Contraseña" />
        <button type="submit" class="saveUser">Guardar</button>
    </form>

    <div>
        <h2>Lista de Usuarios</h2>
        <table>
            <tr>
				<th>ID</th>
				<th>Nombre</th>
				<th>Contraseña</th>
            </tr>
            @if (Model != null && Model.Count > 0)
            {
                foreach (var user in Model)
                {
                <tr>
                    <td>@user.id</td>
                    <td>@user.name</td>
                    <td>@user.password</td>
                </tr>
                }
            }
            else
            {
            <tr>
                <td colspan="3">No hay usuarios registrados.</td>
            </tr>
            }
        </table>
    </div>


    

</body>
</html>